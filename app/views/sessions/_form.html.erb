<%= form_for :session, url: session_path do |form| %>
  <div class="text-field input-group form-group">
    <%#= form.label :email %>
    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    <%= form.text_field :email, type: 'email', placeholder: 'Email', required: true, class: 'form-control' %>
  </div>

  <div class="password-field input-group form-group">
    <%#= form.label :password %>
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <%= form.password_field :password, placeholder: 'Password', required: true, class: 'form-control' %>
  </div>

  <div class="submit-field form-group">
    <%= form.submit 'Sign in', class: 'btn btn-default btn-block' %>
  </div>

  <div class="other-links form-group">
    <%= link_to t(".forgot_password"), new_password_path %>
  </div>
<% end %>
